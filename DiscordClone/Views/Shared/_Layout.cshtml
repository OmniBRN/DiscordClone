@model dynamic

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DiscordClone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DiscordClone.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>
<body>
  
    <div class="layout-container">

        @if (User.IsInRole("User") || User.IsInRole("Moderator") || User.IsInRole("Admin"))
        {
           
            <nav class="sidebar">

                <a asp-controller="Groups" asp-action="Index" class="h1">Discord</a>
                <hr/>
                @if (ViewBag.Groups != null)
                {
                    @foreach (Group group in ViewBag.Groups)
                    {
                        <a asp-controller="Channels" asp-action="Index" asp-route-id=@group.GroupChannelId>
                            <div class="test">
                                <img src=@group.ImageRPath class="poza-grup"/>
                                <p class="nume-grup">@group.Name</p>
                            </div>
                            <hr/>
                        </a>
                    }
                }

                <div class="test">
                    <a class="sidebar-icon" href="/Groups/New" id="adaugare">+</a>
                    <p class="nume-grup">Adauga un grup</p>
                </div>

                <div class="test bottom">
                    <hr/>
                    <img src=@ViewBag.User.ProfilePicture class="poza-grup"/>
                    <p class="nume-grup">@ViewBag.User.UserName</p>
                    <div class="icon-profil">
                        <a asp-controller="Notifications" asp-action="Index" class="icon"><i class="bi bi-envelope-open"></i></a>
                        <a class="icon"><i class="bi bi-gear"></i></a>
                    </div>
                    <!-- asp-controller="Ceva aici" asp-action="Altceva aici"-->
                </div>
                @* <partial name="_LoginPartial" /> *@
            </nav>
        }
        @RenderBody()
       
    </div>

   @*  <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - DiscordClone - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>