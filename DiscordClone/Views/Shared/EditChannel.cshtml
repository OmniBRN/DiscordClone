@model DiscordClone.Models.Group


<div id="modal-editare" class="modal" style="display: none;">
    <h1>Edit Your Server</h1>
    <form enctype="multipart/form-data" method="post" asp-action="Edit" asp-controller="Groups">
        <label asp-for="ImageRPath" class="upload">
            <img id="uploadedImage-edit" src="@ViewBag.fisier">
            <input asp-for="ImageRPath" id="edit" type="file" />
            <span><i class="bi bi-camera"></i></span>
        </label>
        <label asp-for="Name"> Numele Server-ului</label>
        <br />
        <input type="text"
               class="server-name"
               asp-for="Name"
               placeholder="Server Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <br /><br />
        <label asp-for="Description">Descrierea Server-ului</label>
        <br />
        <textarea class="form-control server-name" asp-for="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
        <br />
        <label asp-for="CategoryId">Categoria</label>
        <br />

        <select name="CategoryId" class="server-name">

            @foreach (var item in ViewBag.Categories)
            {
                <option value="@item.Value">@item.Text</option>
            }

        </select>
        
        <span asp-validation-for="CategoryId" class="text-danger"></span>
        <div class="footer">
            @* <button class="back" id="inchide">Back</button> *@
            <button class="create" type="submit">Edit</button>
        </div>
    </form>
</div>
