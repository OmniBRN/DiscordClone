@model DiscordClone.Models.Category


@{
    ViewBag.Title = "Adaugare Categorie";
}


<div class="modal">
    <h2>Adaugare Categorie</h2>

    <form asp-action="New" asp-controller="Categories" method="post">

        <div class="form-group">
            <label asp-for="Name" class="form-label">Denumire categorie</label>
            <br />
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <br /><br />
        <button class="btn btn-success" type="submit">Adauga categorie</button>
    </form>
</div>

