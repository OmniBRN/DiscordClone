@model DiscordClone.Models.Category


@{
    ViewBag.Title = "Editare categorie";
}
<div class="modal">
    <h2>@ViewBag.Title</h2>


    <form asp-action="Edit" asp-controller="Categories" asp-route-id="@Model.Id" method="post">

        <div class="form-group">
            <label asp-for="Name" class="form-label">Denumire categorie</label>
            <br />
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <br />

        <button class="btn btn-success" type="submit">Modifică categoria</button>

    </form>
</div>
